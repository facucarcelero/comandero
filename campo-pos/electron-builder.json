{
  "appId": "com.birthday.pos",
  "productName": "Birthday POS",
  "directories": {
    "output": "build"
  },
  "files": [
    "main.js",
    "preload.js",
    "src/db/**/*",
    "src/utils/**/*",
    "renderer/**/*",
    "!**/node_modules/**/*",
    "!**/src/renderer/node_modules/**/*"
  ],
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*",
    "node_modules/escpos/**/*",
    "node_modules/escpos-usb/**/*"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.ico",
    "publisherName": "Birthday POS",
    "verifyUpdateCodeSignature": false
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "assets/icon.icns",
    "category": "public.app-category.business"
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      }
    ],
    "icon": "assets/icon.png",
    "category": "Office"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "Birthday POS"
  }
}
